<h1>Articles Tagged with <%= @tag.name %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul>


<h5>
<p><%= link_to "delete", tag_path(@tag), method: :delete, data: {confirm: "Really delete the tag?"}
%></p>
<p><%= link_to "Tag List", tags_path %></p>
</h5>